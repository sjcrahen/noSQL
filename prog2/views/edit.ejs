<% include partials/header %>

<h3>Edit Restaurant:</h3>
<% if(errors != undefined){ %>
<ul>
<% errors.forEach(function(error){ %>
<li style="color:red"><%= error.msg %></li>
<% }) %>
</ul>
<% } %>

<form method="POST" action="/restaurant/edit/<%= restaurant._id %>">
    <input type="hidden" name="_method" value="PUT"/>
    <input type="hidden" name="rev" value="<%= restaurant._rev %>"/>

    <label>* Name:</label><br>
    <input type="text" name="name" value="<%= restaurant.name %>"><br>

    <label>Food Type:</label><br>
    <input type="text" name="food_type" value="<%= restaurant.food_type %>"><br>
    
    <label>Phone Number:</label><br>
    <input type="text" name="phonenumber" value="<%= restaurant.phonenumber %>"><br>
    
    <label>* Website:</label><br>
    <input type="text" size="50" name="website" value="<%= restaurant.website %>"><br>

    <br><input type="submit" value="Edit"/> 
</form>

<% include partials/footer %>