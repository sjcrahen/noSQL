<% include partials/header %>

<h1>Edit Blog:</h1>
<% if(errors != undefined){ %>
<ul>
<% errors.forEach(function(error){ %>
<li style="color:red"><%= error.msg %></li>
<% }) %>
</ul>
<% } %>

<form method="POST" action="/Blogs/edit/<%= blog._id %>">
<input type="hidden" name="_method" value="PUT" />
<label><b>Title</b></label><br>
<input type="text" name="title" size=50 value="<%= blog.title %>"><br>
<label><b>Slug</b></label><br>
<input type="text" name="slug" size=50 value="<%= blog.slug %>"><br>
<label><b>Author</b></label><br>
<select name="author">
    <option value="<%= blog.author._id %>"><%= blog.author.name %></option>
</select><br>
<label><b>Body</b></label><br>
<textarea name="body" cols=55 rows=8><%= blog.body %></textarea><br><br>
<b>Comments</b><br>
<ul>
    <li><%= blog.comments.comment %> (<%= blog.comments.created_at %>)<input type="hidden" name="comments" value="<%= blog.comments %>"</li>
</ul>
<b>Category</b>
<ul>
    <li><%= blog.category.name %><input type="hidden" name="category" value="<%= blog.category %>"</li>
</ul>
<input type="submit" value="Edit">
</form>

<% include partials/footer %>
